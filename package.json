{
  "name": "zap-vender",
  "version": "4.1.0",
  "description": "Sistema de CRM com integração WhatsApp para SELF Proteção Veicular - Plataforma de automação de mensagens estilo BotConversa",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/start.js",
    "dev": "nodemon server/start.js",
    "build": "npm run db:migrate",
    "dev:frontend": "vite --config vite.config.ts",
    "build:frontend": "vite build --config vite.config.ts",
    "preview:frontend": "vite preview --config vite.config.ts",
    "postinstall": "node -e \"require('fs').mkdirSync('sessions',{recursive:true});require('fs').mkdirSync('uploads',{recursive:true});\"",
    "db:migrate": "node server/database/migrate.js",
    "db:seed": "node server/database/seed.js",
    "owner:audit": "node scripts/owner-scope-repair.js audit",
    "owner:fix:safe": "node scripts/owner-scope-repair.js safe-fix",
    "owner:fix:map": "node scripts/owner-scope-repair.js apply-map --map ./scripts/owner-map.json",
    "db:reset": "node -e \"console.error('db:reset indisponivel no modo Postgres-only.'); process.exit(1);\"",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/ --testPathPattern=unit",
    "test:integration": "jest tests/ --testPathPattern=integration",
    "lint": "eslint server/ --ext .js",
    "lint:fix": "eslint server/ --ext .js --fix",
    "clean": "rm -rf node_modules sessions data uploads",
    "health": "curl -s http://localhost:3001/health | jq",
    "update": "node scripts/auto-update.js",
    "update:commit": "AUTO_COMMIT=true node scripts/auto-update.js",
    "data:split-owners": "node scripts/split-owner-accounts.js",
    "backup": "node server/utils/backup.js",
    "backup:list": "node -e \"require('./server/utils/backup').listBackups().forEach(b => console.log(b))\"",
    "health:check": "node -e \"require('./server/utils/healthCheck').getHealthStatus().then(r => console.log(JSON.stringify(r, null, 2))).catch(err => { console.error(err); process.exit(1); })\""
  },
  "keywords": [
    "whatsapp",
    "crm",
    "protecao-veicular",
    "baileys",
    "chatbot",
    "automation",
    "flow-builder",
    "bot-conversa"
  ],
  "author": "SELF Proteção Veicular",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fullpropt/zap-vender.git"
  },
  "dependencies": {
    "@whiskeysockets/baileys": "^6.7.16",
    "bcryptjs": "^2.4.3",
    "bull": "^4.16.5",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "fuse.js": "^7.1.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.5",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.3",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "typescript": "^5.7.3",
    "vite": "^6.0.6"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "engineStrict": true
}
